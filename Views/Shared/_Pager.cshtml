@model GamingStoreProject.Models.Pager



<div class="container">
    <div class="container">
        @if (Model.TotalPages > 0)
        {
        <ul class=" pagination justify-content-end">

            @if (Model.CurrerntPage > 1)
            {

                <li class="page-item">
                    <a class="page-link pagination" asp-controller="GraphicCards"   asp-action="Index" asp-route-pg="1">First</a>
                </li>

                <li class="page-item">
                    <a class="page-linkpagination" asp-controller="GraphicCards"    asp-action="Index"  asp-route-pg="@(Model.CurrerntPage - 1)">Previous</a>
                </li>

                


            }

            @for (var pge = Model.StartPage; pge <= Model.EndPage; pge++)
            {
                <li class="page-item @(pge == Model.CurrerntPage ? "active" : "") ">
                    <a class="page-link pagination" asp-controller="GraphicCards" asp-action="Index" asp-route-pg="@pge">@pge</a>
                </li>

                
            }

            @if (Model.CurrerntPage < Model.TotalPages)
            {
                <li class="page-item">

                    <a class="page-link pagination" asp-controller="GraphicCards"   asp-action="Index" asp-route-pg="@(Model.CurrerntPage+1)">Next</a>

                </li>
                <li>
                    <a class=" page-link pagination" asp-controller="GraphicCards"  asp-action="Index" asp-route-pg="@(Model.TotalPages)">Last</a>
                </li>

                
            }


        </ul>
        }



    </div>

</div>

<link rel="stylesheet" href="~/css/Home.css" />
